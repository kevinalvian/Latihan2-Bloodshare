<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/header1" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:bufferType="normal"
        android:inputType="textPersonName"
        android:hint="Username"
        android:textColorHint="#8E8D8D"
        android:textColor="@color/black"
        android:backgroundTint="#8E8D8D"/>

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:inputType="textPersonName"
        android:textColorHint="#8E8D8D"
        android:hint="Email"
        android:textColor="@color/black"
        android:backgroundTint="#8E8D8D"/>

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="Phone Number"
        android:textColor="@color/black"
        android:textColorHint="#8E8D8D"
        android:inputType="number"
        android:backgroundTint="#8E8D8D"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Male"
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:textColor="#8E8D8D"/>

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Female"
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:textColor="#8E8D8D"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextTextPersonName9"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:hint="Blood Type"
            android:textColorHint="#8E8D8D"
            android:textColor="@color/black"
            android:backgroundTint="#8E8D8D"
            android:drawableRight="@android:drawable/arrow_down_float"/>
        <EditText
            android:id="@+id/editTextTextPersonName10"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:hint="Reshus"
            android:textColorHint="#8E8D8D"
            android:textColor="@color/black"
            android:backgroundTint="#8E8D8D"
            android:drawableRight="@android:drawable/arrow_down_float"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Personal"
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:textColor="#8E8D8D"/>

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Organization"
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:textColor="#8E8D8D"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextTextPersonName8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:hint="Job"
            android:textColorHint="#8E8D8D"
            android:textColor="@color/black"
            android:backgroundTint="#8E8D8D"
            android:drawableRight="@android:drawable/arrow_down_float"/>
        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:hint="Home Address"
            android:textColorHint="#8E8D8D"
            android:textColor="@color/black"
            android:backgroundTint="#8E8D8D"/>

        <EditText
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:hint="Location"
            android:textColorHint="#8E8D8D"
            android:textColor="@color/black"
            android:backgroundTint="#8E8D8D"
            android:drawableRight="@drawable/loc"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     Agree with Terms and Condition"
            android:textColor="#8E8D8D"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:drawableLeft="@drawable/box"
            />

        <Button
            android:id="@+id/button"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/button2"
            android:text="register"
            android:textColor="#43b3e6"
            app:backgroundTint="#43b3e6"
            app:iconTint="#FFFFFF"
            app:rippleColor="#FFFFFF" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</LinearLayout>

